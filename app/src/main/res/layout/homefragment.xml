<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/showing_inactive"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/account_inactive"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="30sp"
            android:textColor="#20C1D3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/welcome"
            android:textSize="30sp"
            android:textColor="#454F63"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/approval"
            android:textSize="18sp"
            android:textColor="#454F63"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
    android:id="@+id/city"
    android:src="@drawable/city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    </LinearLayout>
   <!-- <LinearLayout
        android:id="@+id/map_layout"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <FrameLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/decline_button"
                android:visibility="gone"
                android:src="@drawable/decline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/googlemap"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/googlemaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/driver_request"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:background="#F9F9F9"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="300dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:src="@drawable/alarm"
                        android:layout_marginLeft="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                <TextView
                    android:id="@+id/zuby_type"
                    android:text="@string/types"
                    android:paddingRight="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#535C6F"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/rating"
                    android:text="4*"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#535C6F"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fare"
                    android:text="Fare"
                    android:layout_marginLeft="16dp"
                    android:textColor="#535C6F"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/accept_text"
                    android:text="@string/accept"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#2BC4D5"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </FrameLayout>


    <!--</LinearLayout>-->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheetadapterheet"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="200dp"
        android:clipToPadding="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F9F9F9"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ipsum"
            android:padding="16dp"
            android:textSize="16sp"/>

    </android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="500dp"
        android:clipToPadding="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F9F9F9"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        />
</android.support.design.widget.CoordinatorLayout>