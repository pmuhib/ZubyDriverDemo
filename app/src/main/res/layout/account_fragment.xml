<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="16dp"
        android:background="@color/accountback">
        <ImageView
            android:layout_weight="20"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="60"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Muhib Shah"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="20"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="EDIT"
            android:background="@drawable/buttonbackground_shape"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="16dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/accountback">
        <ImageView
            android:layout_weight="20"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="60"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Maruti Suzki"
            android:maxLines="2"
            android:singleLine="false"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_weight="20"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CHANGE"
            android:background="@drawable/buttonbackground_shape"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Partner-driver profile"
    android:textStyle="normal"
    android:padding="16dp"
    android:textColor="@color/black" android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Documents"
        android:textStyle="normal"
        android:padding="16dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waybill"
        android:textStyle="normal"
        android:padding="16dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textStyle="normal"
        android:padding="16dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Settings"
    android:textStyle="normal"
    android:padding="16dp"
    android:textColor="@color/black"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textStyle="normal"
        android:padding="16dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>


</LinearLayout>
<ProgressBar
android:id="@+id/progressBar"
style="?android:attr/progressBarStyleLarge"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:indeterminateDrawable="@drawable/progress_bar"
android:visibility="gone" />
</RelativeLayout>